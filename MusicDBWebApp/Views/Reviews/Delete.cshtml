@model MusicDBWebApp.Models.Review

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="text-center">
        <h1 class="display-4 heading-font">Delete Review</h1>
    </div>
    <p>
        <a asp-action="Index" class="btn btn-primary">All Reviews</a>
    </p>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReviewDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReviewDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReviewText)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReviewText)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Album)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Album.AlbumName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ReviewID" />
        <input type="submit" value="Delete Review" class="btn btn-danger" />
    </form>
</div>
